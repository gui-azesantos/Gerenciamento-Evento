@model GerenciamentoEvento.DTO.LocalDTO;
@{
    ViewData["Title"] = "Criar";
}
<h2>Crie o Local!</h2>

<form class="form-horizontal" asp-controler="Local" asp-action="Salvar" method="POST">

    <input type="hidden" asp-for="Id" value="0">
    
    <div>
    <label asp-for="Nome" class="control-label"></label>
    <input type="text" class="form-control" asp-for="Nome" >
    <span asp-validation-for="Nome"></span>
    </div>
    
    <div>    
    <label asp-for="Endereco" class="control-label"></label>
    <input type="text" class="form-control" asp-for="Endereco" >  
    <span asp-validation-for="Endereco"></span>
    </div>
  
    <div class="form-group"></div>
      <button class= "btn btn-success" type="submit">Criar</button>
    </div>

</form>